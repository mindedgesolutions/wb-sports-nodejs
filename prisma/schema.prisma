generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id                Int          @id     @default(autoincrement())
  name              String       @db.VarChar(255)
  email             String       @unique
  mobile            String?      @db.VarChar(20)
  password          String       @db.VarChar(255)
  department        Department   @default(sports)
  profileImg        String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  sessions          UserSessions[]
}

model UserSessions {
  id                Int          @id     @default(autoincrement())
  user              Users        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            Int
  refreshToken      String
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
}

model SpAdminStructure{
  id                Int          @id            @default(autoincrement())
  name              String       @db.VarChar(255)
  slug              String?      @db.VarChar(255)
  show              Int          @db.SmallInt    @default(0)
  isActive          Boolean      @default(true)
}

model SpKeyPersonnel{
  id                Int          @id     @default(autoincrement())
  name              String       @db.VarChar(255)
  slug              String?      @db.VarChar(255)
  rank              String?      @db.VarChar(255)
  designation       String       @db.VarChar(255)
  img               String?
  isActive          Boolean      @default(true)
  show              Int          @db.SmallInt    @default(0)
}

model SpAchievements{
  id                Int          @id     @default(autoincrement())
  title             String
  description       String?
  achievementDate   DateTime?
  isActive          Boolean      @default(true)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
}

model SpSportsPersonnel{
  id                Int          @id     @default(autoincrement())
  sport             String       @db.VarChar(255)
  name              String       @db.VarChar(255)
  slug              String?      @db.VarChar(255)
  address           String?
  dob               DateTime?    @db.Date
  contactOne        String?      @db.VarChar(20)
  contactTwo        String?      @db.VarChar(20)
  isActive          Boolean      @default(true)
}

enum Department{
  sports
  services
}